
@{
    ViewData["Title"] = "ForgotPasswordConfirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-6 d-none d-lg-block ">
                            <img style="height:100%;width:100%;" src="~/Image/Picsart_22-05-24_15-18-35-138.jpg" />
                        </div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">

                                    <h3 class="mb-4">
                                        If you have an account with us, we have sent an email
                                        with the instructions to reset your password.
                                    </h3>
                                </div>

                                <hr>


                                <div class="text-center">
                                    <a class="" asp-controller="Account" asp-action="Login">Login!</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>