@model GpProject.ViewModels.EditProfileData

@{
    ViewData["Title"] = "EditProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="card o-hidden border-0 shadow-lg my-5">
    <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">

            <div class="col-lg-12">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">Edit Your Profile Data</h1>
                    </div>
                    <form asp-action="EditProfile" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">


                                <input asp-for="FirstName" class="form-control form-control-user" id="exampleFirstName"
                                       placeholder="First Name" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-sm-6">


                                <input asp-for="LastName" class="form-control form-control-user" id="exampleLastName"
                                       placeholder="Last Name" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>


                        </div>

                        <div class="form-group">

                            <input asp-for="UserName" class="form-control form-control-user"
                                   placeholder="UserName" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group">

                            <input asp-for="Email" class="form-control form-control-user" id="exampleInputEmail"
                                   placeholder="Email Address" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">


                            <input asp-for="Password" class="form-control form-control-user"
                                   id="exampleInputPassword" placeholder="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>

                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <input asp-for="NewPassword" class="form-control form-control-user"
                                       id="exampleInputPassword" placeholder="New Password" />
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>
                            <div class="col-sm-6">

                                <input asp-for="ConfirmNewPassword" class="form-control form-control-user"
                                       id="exampleRepeatPassword" placeholder="Confirm New Password" />
                                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                            </div>
                        </div>




                        <div class="form-group row">
                            <div class="col-sm-3 mb-3 mb-sm-0">
                                <input asp-for="Country" class="form-control form-control-user"
                                       placeholder="Country" />
                                <span asp-validation-for="Country" class="text-danger"></span>
                            </div>
                            <div class="col-sm-3 mb-3 mb-sm-3">

                                <input asp-for="City" class="form-control form-control-user"
                                       placeholder="City" />
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                            <div class="col-sm-3 mb-3 mb-sm-3">

                                <input asp-for="District" class="form-control form-control-user"
                                       placeholder="District" />
                                <span asp-validation-for="District" class="text-danger"></span>
                            </div>
                        </div>



                        <div class="form-group">

                            <input asp-for="Phone" class="form-control form-control-user"
                                   placeholder="Phone" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input asp-for="Image" onchange="loadFile(event)" class="form-control" />
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>
                        <img id="output" style="border-radius:5px;width:5rem;height:5rem;" />
                        <div class="form-group">
                            <input type="submit" value="Edit" class="btn btn-primary btn-user btn-block" />
                        </div>





                    </form>
                    <hr>

                </div>
            </div>
        </div>
    </div>
</div>




@section Scripts{
    <script>
        var loadFile = function (event) {
            var reader = new FileReader();
            reader.onload = function () {
                var output = document.getElementById('output');
                output.src = reader.result;
            };
            reader.readAsDataURL(event.target.files[0]);
        };
    </script>
}